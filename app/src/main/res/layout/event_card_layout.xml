<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card_root_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                app:srcCompat="@color/colorAccent" />

            <ImageView
                android:id="@+id/overlayImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitXY"
                 />

            <TextView
                android:id="@+id/dayOfWeekLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                app:autoSizeMinTextSize="17sp"
                app:autoSizeTextType="uniform"
                tools:text="EventSource#" />

            <TextView
                android:id="@+id/eventSourceLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dayOfWeekLabel"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeTextType="uniform"
                tools:text="EventSource#" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textSize="30sp"
                app:autoSizeTextType="none"
                tools:text="@string/event_title_placeholder" />

            <TextView
                android:id="@+id/eventCardVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textSize="30sp"
                app:autoSizeTextType="none"
                tools:text="Sample Event Venue" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="20sp"
                app:autoSizeTextType="none"
                tools:text="01/01/1970" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="20sp"
                app:autoSizeTextType="none"
                tools:text="00:00" />

            <TextView
                android:id="@+id/eventPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="20sp"
                app:autoSizeTextType="none"
                tools:text="Price: Â£0.00"
                android:text="@string/price"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>