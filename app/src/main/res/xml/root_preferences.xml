<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Event Curation Settings">
        <SeekBarPreference
            android:max="@integer/radius_max"
            app:defaultValue="@integer/radius_default"
            app:key="radius"
            app:min="@integer/radius_min"
            app:showSeekBarValue="true"
            app:summary="We will curate events this many miles away fom your current location">

        </SeekBarPreference>
        <SeekBarPreference
            app:defaultValue="2"
            app:key="daysFromNow"
            android:max="14"
            app:min="1"
            app:showSeekBarValue="true"
            app:summary="We will curate events this many days from now">

        </SeekBarPreference>

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>
