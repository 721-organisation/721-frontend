<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Slack">
        <Preference
            android:key="slackkey"
            android:summary="To leave feedback, and keep up with the 721 Community, click here!"
            android:title="Join our Slack community here" >
        <intent
            android:targetClass="com.travel721.SlackActivity"
            android:targetPackage="com.travel721">
        </intent>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory app:title="Event Curation">
        <SeekBarPreference
            android:max="@integer/radius_max"
            app:defaultValue="@integer/radius_default"
            app:key="radius"
            app:min="@integer/radius_min"
            app:showSeekBarValue="true"
            app:summary="We will curate events this many miles away fom your current location">

        </SeekBarPreference>
        <SeekBarPreference
            android:max="7"
            app:defaultValue="2"
            app:key="daysFromNow"
            app:min="1"
            app:showSeekBarValue="true"
            app:summary="We will curate events this many days from now">

        </SeekBarPreference>

    </PreferenceCategory>

    <PreferenceCategory app:title="Event History">
        <SwitchPreference
            android:defaultValue="false"
            android:key="eventListOrder"
            android:title="Event ordering setting"
            app:summary="By default, we'll show events you've liked starting from the furthest in the future. Check this to see the oldest first." />
    </PreferenceCategory>

    <PreferenceCategory app:title="Third Party Libraries">
        <Preference
            app:key="loadTPLIntent"
            app:title="This app relies on third-party libraries. To see them, click here.">
            <intent
                android:targetClass="com.travel721.ListLibrariesActivity"
                android:targetPackage="com.travel721">
            </intent>
        </Preference>
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
