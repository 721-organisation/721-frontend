<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="Rate 721">
        <Preference
            android:key="rate721"
            android:summary="To rate 721 on Google Play, please click here"
            android:title="We'd love to hear your feedback">
            <intent
                android:targetClass="com.travel721.RateOnPlayActivity"
                android:targetPackage="com.travel721" />
        </Preference>
    </PreferenceCategory>


    <PreferenceCategory app:title="Contact 721 Team">
        <Preference
            android:key="contact721"
            android:summary="Click here to contact 721"
            android:title="Drop us an email with a message, feedback or suggestions!">
            <intent
                android:targetClass="com.travel721.activity.Email721TeamRedirectActivity"
                android:targetPackage="com.travel721" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory app:title="Third Party Libraries">
        <Preference
            app:key="loadTPLIntent"
            app:title="This app relies on third-party libraries. To see them, click here.">
            <intent
                android:targetClass="com.travel721.activity.ListLibrariesActivity"
                android:targetPackage="com.travel721" />
        </Preference>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>